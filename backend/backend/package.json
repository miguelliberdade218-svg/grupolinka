{
  "name": "link-a-backend",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "description": "Link-A Backend API for Railway deployment",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development tsx watch index.ts",
    "build": "esbuild index.ts --platform=node --packages=external --bundle --format=esm --outfile=dist/index.js --external:drizzle-orm --external:zod --external:pg --external:express --external:firebase-admin",
    "start": "NODE_ENV=production node dist/index.js",
    "check": "tsc --noEmit",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check:pg",
    "db:drop": "drizzle-kit drop",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:chat": "jest --testPathPattern=ChatStorage",
    "test:types": "tsc --noEmit"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.17.0",
    "@neondatabase/serverless": "^0.10.4",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^10.0.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.29.5",
    "drizzle-zod": "^0.3.2",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "firebase-admin": "^13.4.0",
    "geolib": "^3.3.4",
    "google-auth-library": "^10.2.1",
    "knex": "^3.1.0",
    "memoizee": "^0.4.17",
    "memorystore": "^1.6.7",
    "multer": "^2.0.2",
    "nodemon": "^3.1.10",
    "openid-client": "^6.6.4",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "socket.io": "^4.8.1",
    "stripe": "^18.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "uuid": "^8.3.2",
    "ws": "^8.18.0",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^30.0.0",
    "@types/memoizee": "^0.4.12",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.16.11",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/ws": "^8.5.13",
    "better-sqlite3": "^12.2.0",
    "drizzle-kit": "^0.20.14",
    "esbuild": "^0.25.9",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  },
  "engines": {
    "node": ">=18"
  }
}
